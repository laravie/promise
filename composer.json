{
    "name": "laravie/promise",
    "description": "Fluent Promises with reactphp/promise",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Laravie\\Promise\\": "src/"
        }
    },
    "require": {
        "php": ">=7.0",
        "react/promise": "^2.5"
    },
    "require-dev": {
        "amphp/parallel-functions": "^0.1.2",
        "phpunit/phpunit": "^6.0",
        "react/event-loop": "^0.4 || ^0.5"
    },
    "suggest": {
        "amphp/parallel-functions": "To use ParallelPromises (~0.1.2).",
        "react/event-loop": "To use EventPromises (~0.4)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
